# See https://ghostty.org/docs/config

# Command to reload: cmd+shift+, or ctrl+shift+,

###############
# Preferences #
###############
# Font list: `ghostty +list-fonts`
font-family = PlemolJP Console NF
font-style =  Bold
font-size = 15

# Themes: `ghostty +list-themes`
# theme = BirdsOfParadise
theme = CobaltNext

background-opacity = 0.90
background-blur = true
macos-window-shadow = false

window-padding-balance = true
window-padding-x = 8
window-padding-y = 0

mouse-hide-while-typing = true

window-save-state  = always
quit-after-last-window-closed = true
window-position-x = 0
window-position-y = 0

###############
# Keybindings #
###############
# ghostty +list-actions
keybind = all:shift+ctrl+;=increase_font_size:1
keybind = all:ctrl+-=decrease_font_size:1

# macos-option-as-alt = true
# macos-non-native-fullscreen = true

# for Meta + v
keybind = cmd+v=text:\x1bv
keybind = cmd+x=text:\x1bx
keybind = cmd+f=text:\x1bf
keybind = cmd+b=text:\x1bb
